  <title>Document</title>
  <style>
    #container {
    width: 400px;
    height: 400px;
    position: relative;
    background: yellow;
}
#animate {
    width: 50px;
    height: 50px;
    position: absolute;
    background: red;
} 
  </style>
</head>
<body>
  <html>
<body>
  <p><button onclick="myMove()">单击我</button></p> 

  <h1>我的第一部 JavaScript 动画</h1>

<div id="container">

  <div id="animate"></div>

</div>
<script>
  function myMove() {
    var elem = document.getElementById("animate");   
    var pos = 0;
    var id = setInterval(frame, 5);
    function frame() {
      if (pos == 350) {
        clearInterval(id);
      } else {
        pos++; 
        elem.style.top = pos + "px"; 
        elem.style.left = pos + "px"; 
      }
    }
  }
  </script>
